@using Withly.Domain.Enums
@model Withly.Application.Emails.Templates.EventInviteEmail
@{
    var baseUrl = $"{Model.RsvpBaseUrl}?eventId={Model.EventId}&inviteeId={Model.InviteeId}&secret={Model.RsvpSecret}&response=";
}
<p>Hi @Model.DisplayName,</p>

<p>
    You’ve been invited to <strong>@Model.EventTitle</strong>
    on <strong>@Model.StartUtc.ToString("yyyy-MM-dd HH:mm")</strong> UTC.
</p>

<p>Please RSVP:</p>
<ul>
    @foreach (var option in Enum.GetValues<RsvpStatus>())
    {
        if (option == RsvpStatus.NoResponse)
        {
            continue;
        }
        
        <li>
            <a href="@($"{baseUrl}{option.ToString()}")">
                @option.ToString()
            </a>
        </li>
    }
</ul>
